{% extends 'partials/base.html.twig' %}

{% block content %}
  {{ page.content }}
  <div class="success-story">
    <h1>Casos de Exitos</h1>
    <div class="section-pattern section-pattern-lightblue-top container-success">
      <div class="limiter container-success">
        
        <div>
          {% if header.main_successStory_image %}
            <img class="size-images" src="{{(header.main_successStory_image|first).path}}" alt="">
          {% endif %}
          {% if header.main_successStory_video %}
            <iframe class="main_successStory_video" width="560" height="315" src="https://www.youtube.com/embed/{{header.main_successStory_video}}" frameborder="0"allowfullscreen></iframe>
          {% endif %}
        </div>
        <div class="info-success">
          <h2>{{header.main_successStory_title}}</h2>
          <p>{{header.main_successStory_description}}</p>
        </div>        
      </div>

    </div>    
    <div class="limiter">

      {% for story in header.success %}
        <div class="container-success"> 
          <div>
            {% if story.successStory_image %}
              <img class="size-images" src="{{(story.successStory_image|first).path}}" alt="">
            {% endif %}
            {% if story.successStory_video %}
              <iframe class="main_successStory_video" width="560" height="315" src="https://www.youtube.com/embed/{{story.successStory_video}}" frameborder="0" allowfullscreen></iframe>
            {% endif %}
          </div>
          <div class="info-success">
            <h2>{{ story.successStory_title }}</h2>
            <p>{{ story.successStory_description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}